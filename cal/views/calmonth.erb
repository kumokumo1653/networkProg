<!DOCTYPE html>
    <html>
        <head>
            <meta charset="utf-8" />
            <title>Cal</title>
            <link rel="stylesheet" type="text/css" href="/css/cal.css">
        </head>
        <body>
            <% lasty,lastm = $calendar.lastMonth %>
            <a href="http://127.0.0.1:9998/<%= lasty%>/<%=lastm%>">先月</a>
            <% nowy,nowm = $calendar.nowMonth %>
            <a href="http://127.0.0.1:9998/<%= nowy%>/<%=nowm%>">今月</a>
            <% nexty,nextm = $calendar.nextMonth %>
            <a href="http://127.0.0.1:9998/<%=nexty%>/<%=nextm%>">来月</a>
            <table>
                <caption><%= "#{@y}年#{@m}月"%></caption>
                <tr>
                    <th><div class="Sun">Sun</div></th>
                    <th>Mon</th>
                    <th>Tue</th>
                    <th>Wed</th>
                    <th>Thu</th>
                    <th>Fri</th>
                    <th><div class="Sat">Sat</div></th>
                </tr>
                <% @cal.each do |a| %>
                    <tr>
                        <% for i in 0..6 do %>
                            <% if i == 0 %>
                                <% if @nowFlag && a[i] == @d.to_s %>
                                    <td class="today"><div class="Sun"><%= a[i] %></div></td>
                                <% else %>
                                    <td><div class="Sun"><%= a[i] %></div></td>
                                <% end %>
                            <% elsif i == 6 %>
                                <% if @nowFlag && a[i] == @d.to_s%>
                                    <td class="today"><div class="Sat"><%= a[i] %></div></td>
                                <% else %>
                                    <td><div class="Sat"><%= a[i] %></div></td>
                                <% end %>
                            <% else %>
                                <% if @nowFlag && a[i] == @d.to_s%>
                                    <td class="today"><%= a[i] %></td>
                                <% else %>
                                    <td><%= a[i] %></td>
                                <% end %>
                            <% end %>
                        <% end %>
                    </tr>
                <% end %>
            </table>
                
        </body>
    </html>

